<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="@drawable/bgmenu22"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lblComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="170dp"
        android:padding="10dp"
        android:text="Metode Pengoperasian"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="25dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_gravity="center">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:background="@drawable/redbut"
                android:text="MONITORING"
                android:textStyle="bold"
                android:textColor="#FFFF"/>

            <ImageButton
                android:id="@+id/monitorButton"
                android:layout_width="151dp"
                android:layout_height="143dp"
                android:background="@null"
                android:onClick="keMonitoring"
                android:scaleType="fitXY"
                android:src="@drawable/monitoring" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:background="@drawable/redbut"
                android:text="CONTROLLING"
                android:textStyle="bold"
                android:textColor="#FFFF"/>

            <ImageButton
                android:id="@+id/controlButton"
                android:layout_width="151dp"
                android:layout_height="143dp"
                android:background="@null"
                android:onClick="keControlling"
                android:scaleType="fitXY"
                android:src="@drawable/controlling" />


        </LinearLayout>

</LinearLayout>

</LinearLayout>

